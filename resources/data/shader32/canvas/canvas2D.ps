layout (std140) uniform PSCBuffer0 {
	vec4	  gPSAdjust;
	vec4 	  gPSColor;
};

uniform sampler2D gPSTexture0;

#ifdef TEXTURE
	in  vec4 Tex;
#endif
out vec4 outColor;

void main()
{
	#ifdef TEXTURE
		outColor = texture(gPSTexture0, Tex.xy )*gPSColor;
		if( outColor.a < 1 ) discard;
	#else
		outColor = gPSColor;
	#endif
}